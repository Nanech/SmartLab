<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="ring" android:innerRadius="0dp"
            android:thickness="40dp" android:useLevel="false">
            <solid android:color="@color/action_color"/>
            <size android:height="80dp" android:width="80dp"/>
        </shape>
    </item>


    <item android:state_pressed="false">
        <shape android:shape="ring" android:innerRadius="0dp"
            android:thickness="40dp" android:useLevel="false">
            <solid android:color="@color/fill"/>
            <size android:height="80dp" android:width="80dp"/>
        </shape>
    </item>

</selector>